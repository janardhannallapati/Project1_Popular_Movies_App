<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="android.inoss.com.popularmoviesapp.fragments.MovieDetailsFragment" >

    <TextView android:id="@+id/movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Chappie"
         />
    <LinearLayout android:paddingTop="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <ImageView android:id="@+id/movie_poster_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content" android:id="@+id/movie_release_date"
                android:layout_height="wrap_content" tools:text="2015"/>
            <TextView android:id="@+id/movie_user_rating"
                android:layout_width="wrap_content" tools:text="8.1"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <TextView android:id="@+id/movie_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Every child comes into world full of promise, and none more so than Chappie: he is gifted, special; a prodigy. Chappie he is a robot."
        />
</LinearLayout>
